<!--
    ################# Logging configuration for tests #################
-->
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</Pattern>
        </encoder>
    </appender>

    <!-- Logging of SQL statements and parameter bindings -->

    <logger name="org.hibernate.SQL" level="debug" />
    <logger name="org.hibernate.type.descriptor.sql" level="trace" />

    <!-- Logging of transactions -->

    <logger name="org.springframework.transaction" level="debug" />
    <logger name="org.springframework.orm.jpa" level="debug" />

    <!-- Logging of SQL scripts execution in tests -->

    <logger name="org.springframework.test.context.jdbc.SqlScriptsTestExecutionListener" level="debug" />

    <logger name="pl.danlz.trainings.jpaspringdata" level="info" />

    <root level="warn">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
